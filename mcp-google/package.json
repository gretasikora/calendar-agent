    "googleapis": "^144.0.0",
    "open": "^7.4.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.2",
    "@types/node": "^20.10.4",
    "@vitest/coverage-v8": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^3.1.1"
  }
